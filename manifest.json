{
  "manifest_version": 3,
  "name": "Google Sheets 超链接转换工具",
  "version": "1.0",
  "description": "将网页链接转换为 Google Sheets 超链接公式格式",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Google Sheets 超链接转换工具"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://docs.google.com/spreadsheets/*"],
      "js": ["i18n.js", "content.js"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 